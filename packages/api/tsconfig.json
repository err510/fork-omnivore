{
  "extends": "./../../tsconfig.json",
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "outDir": "dist",
    "types": ["node"],
    "esModuleInterop": true,
    "skipLibCheck": true  // 让 TypeScript 忽略缺失的类型
  },
  // "include": ["src/**/*.ts", "test/**/*.ts"],
  // "exclude": ["./src/generated"]
  "include": ["src/**/*.ts"],   // 只编译 src，不编译 test
  "exclude": ["./src/generated", "test"] // 排除 test 文件夹
}
